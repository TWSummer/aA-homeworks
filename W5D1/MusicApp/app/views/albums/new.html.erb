<h1>Create Album</h1>
<%= show_errors(flash.now[:errors]) %>

<form action="<%= albums_url %>" method="post">
  <%= authenticate %>
  <select name="album[band_id]">
    <option disabled>--SELECT BAND--</option>
    <% @bands.each do |band| %>
    <option value="<%= band.id %>" <%= "selected" if band==@selected %> ><%=band.name%></option>
    <% end %>
  </select>
  <br>
  <label for="title">Title:</label>
  <input type="text" name="album[title]" id="title">
  <br>
  <label for="year">Year: </label>
  <input type="text" name="album[year]" id="year">
  <br>
  <div class="radio-select">
  <p>Type: </p>
  <label for="live">Live</label>
  <input type="radio" name="album[studio]" value="false" id="live">
  <label for="studio">Studio</label>
  <input type="radio" name="album[studio]" value="true" id="studio">
  </div>
  <br>
  <input type="submit" value="Create!">
</form>
