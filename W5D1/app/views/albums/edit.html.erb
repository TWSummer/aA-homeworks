<h1>Edit <%= @album.title %></h1>

<%= show_errors(flash.now[:errors]) %>

<form action="<%= album_url(@album) %>" method="post">
  <%= authenticate %>
  <input type="hidden" name="_method" value="PATCH">
  <select name="album[band_id]">
    <option disabled>--SELECT BAND--</option>
    <% @bands.each do |band| %>
    <option value="<%= band.id %>" <%= "selected" if band.id == @album.band_id %> ><%=band.name%></option>
    <% end %>
  </select>
  <br>
  <label for="title">Title: </label>
  <input type="text" name="album[title]" id="title" value="<%= @album.title %>">
  <br>
  <label for="year">Year: </label>
  <input type="text" name="album[year]" id="year" value="<%= @album.year %>">
  <br>
  <div class="radio-select">
  <p>Type: </p>
  <label for="live">Live</label>
  <input type="radio" name="album[studio]" value="false" id="live" <%= "checked" unless @album.studio %>>
  <label for="studio">Studio</label>
  <input type="radio" name="album[studio]" value="true" id="studio" <%= "checked" if @album.studio %>>
  </div>
  <br>
  <input type="submit" value="Update!">
</form>
